# Example .env file for dockerized Chroemaker

# Spotify API credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token_here
SPOTIFY_PLAYLIST_URL=https://open.spotify.com/playlist/your_playlist_id

# Spotify Web Player credentials (for browser automation)
SPOTIFY_USERNAME=your_spotify_email_or_username
SPOTIFY_PASSWORD=your_spotify_password

# OpenAI API key (for choreography generation)
OPENAI_API_KEY=your_openai_api_key_here

# PulseAudio configuration (containerized - usually no need to change)
PULSE_MONITOR_SOURCE=spotify_sink.monitor

# Application settings
OUT_DIR=/app/captures
POLL_SECONDS=1.0
PAD_SECONDS=1.0
AUTO_UPLOAD=0

# VNC password for remote viewing (optional - for debugging)
VNC_PASSWORD=chroemaker
